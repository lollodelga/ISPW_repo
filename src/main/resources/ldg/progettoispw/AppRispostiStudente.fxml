<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ldg.progettoispw.view.studente.AppRispostiStudenteCtrlGrafico">

    <!-- SFONDO -->
    <ImageView fitHeight="600.0" fitWidth="1000.0" preserveRatio="false">
        <image>
            <Image url="@../../images/wallpaper.jpeg"/>
        </image>
    </ImageView>

    <!-- BARRA SUPERIORE -->
    <AnchorPane prefHeight="63.0" prefWidth="1000.0" style="-fx-background-color: white;">
        <children>
            <ImageView fitHeight="48.0" fitWidth="171.0" layoutX="14.0" layoutY="8.0" preserveRatio="true">
                <image>
                    <Image url="@../../images/tutorLOGO.png"/>
                </image>
            </ImageView>

            <Button fx:id="btnBack" layoutX="820.0" layoutY="12.0"
                    onAction="#backAction"
                    text="âŸµ Indietro"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #3498DB;
                           -fx-font-size: 20px;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;
                           -fx-border-color: transparent;">
                <tooltip>
                    <Tooltip text="Torna alla schermata precedente"/>
                </tooltip>
            </Button>
        </children>
    </AnchorPane>

    <!-- CONTENUTO PRINCIPALE -->
    <AnchorPane layoutY="63.0" prefWidth="1000.0">
        <children>

            <!-- Rettangolo sfondo traslucido azzurro -->
            <Rectangle arcHeight="20.0" arcWidth="20.0"
                       fill="#3498DBAA"
                       height="480.0" layoutX="198.0" layoutY="29.0"
                       stroke="TRANSPARENT" width="605.0"/>

            <!-- Contenitore principale -->
            <VBox alignment="TOP_CENTER" layoutX="250.0" layoutY="70.0"
                  prefWidth="500.0" spacing="20.0">

                <!-- Titolo -->
                <Label fx:id="titleLabel"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"
                       text="Appuntamenti Conclusi"/>

                <!-- Lista appuntamenti -->
                <ScrollPane fx:id="scrollResults" prefHeight="360.0" prefWidth="500.0"
                            style="-fx-background-color: transparent; -fx-background: transparent;">
                    <content>
                        <VBox fx:id="resultsContainer" alignment="TOP_CENTER" spacing="10.0"
                              style="-fx-padding: 10;"/>
                    </content>
                </ScrollPane>
            </VBox>

            <!-- Pannello dettagli richiesta (popup centrato, senza sfondo pieno) -->
            <AnchorPane fx:id="appointmentPane"
                        visible="false"
                        layoutX="250.0" layoutY="150.0"
                        prefWidth="500.0" prefHeight="250.0"
                        style="-fx-background-color: #3498DBEE;
                               -fx-border-radius: 10;
                               -fx-background-radius: 10;
                               -fx-border-color: #3498DB;
                               -fx-border-width: 2;
                               -fx-effect: dropshadow(gaussian, gray, 10, 0, 0, 3);">

                <children>
                    <VBox alignment="CENTER" spacing="10.0" layoutX="10.0" layoutY="10.0"
                          style="-fx-background-color: #3498DBAA;
                                 -fx-padding: 15;
                                 -fx-background-radius: 10;">
                        <Label text="Dettagli Appuntamento"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>

                        <!-- Info appuntamento -->
                        <Label fx:id="lblTutor" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                        <Label fx:id="lblData" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                        <Label fx:id="lblOra" style="-fx-font-size: 14px; -fx-text-fill: white;"/>
                        <Label fx:id="lblStato" style="-fx-font-size: 14px; -fx-text-fill: white;"/>

                        <!-- Area recensione, visibile solo per appuntamenti completati -->
                        <TextArea fx:id="txtRecensione"
                                  promptText="Scrivi recensione (max 250 caratteri)"
                                  wrapText="true"
                                  prefRowCount="3"
                                  visible="false"
                                  style="-fx-font-size: 14px;
                                         -fx-background-color: white;
                                         -fx-text-fill: black;
                                         -fx-background-radius: 10;"/>

                        <!-- Pulsanti -->
                        <HBox alignment="CENTER" spacing="10.0">
                            <Button fx:id="btnInviaRecensione"
                                    text="Invia Recensione"
                                    visible="false"
                                    onAction="#onInviaRecensioneClick"
                                    style="-fx-background-color: white;
                                           -fx-text-fill: #2ECC71;
                                           -fx-font-size: 14px;
                                           -fx-background-radius: 10;"/>

                            <Button fx:id="btnChiudi"
                                    text="Chiudi"
                                    onAction="#onChiudiClick"
                                    style="-fx-background-color: white;
                                           -fx-text-fill: #95A5A6;
                                           -fx-font-size: 14px;
                                           -fx-background-radius: 10;"/>
                        </HBox>
                    </VBox>
                </children>
            </AnchorPane>

        </children>
    </AnchorPane>
</AnchorPane>
