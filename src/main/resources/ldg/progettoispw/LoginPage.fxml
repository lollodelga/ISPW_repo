<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ldg.progettoispw.view.LoginCtrlGrafico"
            prefHeight="600.0" prefWidth="1000.0">

   <children>

      <!-- ðŸ”¹ SFONDO -->
      <ImageView fitHeight="600.0" fitWidth="1000.0" preserveRatio="false">
         <image>
            <Image url="@../../images/wallpaper.jpeg" />
         </image>
      </ImageView>

      <!-- ðŸ”¹ BARRA SUPERIORE -->
      <AnchorPane fx:id="BarraSuperiore" prefHeight="63.0" prefWidth="1000.0"
                  style="-fx-background-color: white;">
         <children>
            <ImageView fitHeight="48.0" fitWidth="171.0" layoutX="14.0" layoutY="8.0"
                       pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/tutorLOGO.png" />
               </image>
            </ImageView>

            <Button fx:id="btnBack" layoutX="820.0" layoutY="12.0"
                    onAction="#backaction"
                    text="âŸµ Indietro"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #3498db;
                           -fx-font-size: 20px;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;
                           -fx-border-color: transparent;">
               <tooltip>
                  <Tooltip text="Torna alla schermata precedente" />
               </tooltip>
            </Button>
         </children>
      </AnchorPane>

      <!-- ðŸ”¹ CARD CENTRALE (coerente con FirstPage e Registration) -->
      <AnchorPane layoutX="217.0" layoutY="120.0" prefWidth="567.0" prefHeight="420.0"
                  style="-fx-background-color: white;
                         -fx-background-radius: 20;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0.2, 0, 2);">

         <children>
            <Label layoutX="30.0" layoutY="25.0" text="EFFETTUA L'ACCESSO:"
                   textFill="#3498db">
               <font><Font size="28.0" /></font>
            </Label>

            <Label layoutX="30.0" layoutY="95.0" text="Email:">
               <font><Font size="20.0" /></font>
            </Label>
            <TextField fx:id="email" layoutX="30.0" layoutY="125.0"
                       prefHeight="45.0" prefWidth="505.0"
                       promptText="Inserisci la tua email"
                       style="-fx-font-size: 18px; -fx-background-radius: 10;" />

            <Label layoutX="30.0" layoutY="190.0" text="Password:">
               <font><Font size="20.0" /></font>
            </Label>
            <PasswordField fx:id="password" layoutX="30.0" layoutY="220.0"
                           prefHeight="45.0" prefWidth="505.0"
                           promptText="Inserisci la tua password"
                           style="-fx-font-size: 18px; -fx-background-radius: 10;" />

            <Button defaultButton="true"
                    layoutX="180.0" layoutY="300.0"
                    prefHeight="60.0" prefWidth="200.0"
                    onAction="#login"
                    text="ACCEDI"
                    style="-fx-background-color: #3498DB;
                           -fx-text-fill: white;
                           -fx-font-size: 20px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 15;
                           -fx-cursor: hand;" />
         </children>
      </AnchorPane>

      <!-- ðŸ”¹ WARNING -->
      <Rectangle fx:id="warningRectangle" arcHeight="5.0" arcWidth="5.0"
                 fill="WHITE" height="33.0" layoutX="216.0" layoutY="73.0"
                 stroke="TRANSPARENT" strokeWidth="0.0" width="568.0" visible="false" />
      <Label fx:id="warningLabel" layoutX="220.0" layoutY="72.0"
             text="ERRORE" textFill="RED" visible="false">
         <font><Font size="20.0" /></font>
      </Label>

   </children>
</AnchorPane>
