<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ldg.progettoispw.view.tutor.ManageReviewsCtrlGrafico">

    <!-- ðŸ”¹ SFONDO -->
    <ImageView fitHeight="600.0" fitWidth="1000.0" preserveRatio="false">
        <image>
            <Image url="@../../images/wallpaper.jpeg" />
        </image>
    </ImageView>

    <!-- ðŸ”¹ BARRA SUPERIORE -->
    <AnchorPane prefHeight="63.0" prefWidth="1000.0" style="-fx-background-color: white;">
        <children>
            <ImageView fitHeight="48.0" fitWidth="171.0" layoutX="14.0" layoutY="8.0" preserveRatio="true">
                <image>
                    <Image url="@../../images/tutorLOGO.png" />
                </image>
            </ImageView>

            <Button fx:id="btnBack" layoutX="820.0" layoutY="12.0"
                    onAction="#backAction"
                    text="âŸµ Indietro"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #3498db;
                           -fx-font-size: 20px;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;
                           -fx-border-color: transparent;">
                <tooltip>
                    <Tooltip text="Torna alla schermata precedente" />
                </tooltip>
            </Button>
        </children>
    </AnchorPane>

    <!-- ðŸ”¹ CONTENUTO PRINCIPALE -->
    <AnchorPane layoutY="63.0" prefWidth="1000.0">
        <children>

            <!-- Rettangolo sfondo traslucido azzurro -->
            <Rectangle arcHeight="20.0" arcWidth="20.0"
                       fill="#3498DBAA"
                       height="505.0" layoutX="198.0" layoutY="29.0"
                       stroke="TRANSPARENT" width="606.0" />

            <VBox alignment="TOP_CENTER" layoutX="250.0" layoutY="40.0"
                  prefWidth="500.0" spacing="20.0">

                <!-- Titolo -->
                <Label fx:id="titleLabel"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"
                       text="Recensioni e Sentiment" />

                <!-- Grafico a colonne -->
                <BarChart fx:id="barChart" prefHeight="250.0" prefWidth="480.0">
                    <xAxis>
                        <CategoryAxis label="Tutor"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Sentiment Medio"/>
                    </yAxis>
                </BarChart>

                <!-- Lista recensioni -->
                <ScrollPane fx:id="scrollReviews" prefHeight="154.0" prefWidth="500.0"
                            style="-fx-background-color: transparent; -fx-background: transparent;">
                    <content>
                        <VBox fx:id="reviewsContainer" alignment="TOP_CENTER" spacing="10.0" style="-fx-padding: 10;" />
                    </content>
                </ScrollPane>
            </VBox>
        </children>
    </AnchorPane>
</AnchorPane>
