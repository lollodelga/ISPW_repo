<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ldg.progettoispw.view.RegistrationCtrlGrafico"
            prefHeight="600.0" prefWidth="1000.0">

   <children>

      <!-- Sfondo -->
      <ImageView fitHeight="600.0" fitWidth="1000.0" preserveRatio="false">
         <image>
            <Image url="@../../images/wallpaper.jpeg" />
         </image>
      </ImageView>

      <!-- Barra superiore -->
      <AnchorPane fx:id="BarraSuperiore" prefHeight="63.0" prefWidth="1000.0"
                  style="-fx-background-color: white;">
         <children>
            <ImageView fitHeight="48.0" fitWidth="171.0" layoutX="14.0" layoutY="8.0"
                       pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/tutorLOGO.png" />
               </image>
            </ImageView>

            <Button fx:id="btnBack" layoutX="820.0" layoutY="12.0"
                    onAction="#backaction"
                    text="âŸµ Indietro"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #3498db;
                           -fx-font-size: 20px;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;
                           -fx-border-color: transparent;">
               <tooltip>
                  <Tooltip text="Torna alla schermata precedente" />
               </tooltip>
            </Button>
         </children>
      </AnchorPane>

      <!-- Card centrale -->
      <ScrollPane layoutX="206.0" layoutY="90.0" prefHeight="460.0" prefWidth="587.0"
                  fitToWidth="true"
                  style="-fx-background: transparent; -fx-background-color: transparent;">
         <content>
            <VBox spacing="15.0" alignment="TOP_CENTER"
                  style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 15, 0.2, 0, 2);"
                  prefWidth="587.0">
               <children>

                  <Text text="EFFETTUA LA REGISTRAZIONE:" style="-fx-fill: #3498db;">
                     <font><Font size="28.0" /></font>
                  </Text>

                  <Text text="Scegli il tuo ruolo:">
                     <font><Font size="22.0" /></font>
                  </Text>

                  <HBox spacing="30.0" alignment="CENTER">
                     <children>
                        <RadioButton fx:id="tutorButton" text="Tutor"
                                     onAction="#clickTutor"
                                     style="-fx-text-fill: black; -fx-font-size: 20;">
                           <toggleGroup><ToggleGroup fx:id="roleGroup" /></toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="studenteButton" text="Studente"
                                     onAction="#clickStudente"
                                     toggleGroup="$roleGroup"
                                     style="-fx-text-fill: black; -fx-font-size: 20;" />
                     </children>
                  </HBox>

                  <Text text="Nome"><font><Font size="20.0" /></font></Text>
                  <TextField fx:id="nome" promptText="Inserisci il tuo nome"
                             style="-fx-font-size: 18px; -fx-background-radius: 10;" />

                  <Text text="Cognome"><font><Font size="20.0" /></font></Text>
                  <TextField fx:id="cognome" promptText="Inserisci il tuo cognome"
                             style="-fx-font-size: 18px; -fx-background-radius: 10;" />

                  <Text text="Data di nascita (aaaa-mm-gg)"><font><Font size="20.0" /></font></Text>
                  <TextField fx:id="nascita" promptText="2000-01-01"
                             style="-fx-font-size: 18px; -fx-background-radius: 10;" />

                  <Text text="Email"><font><Font size="20.0" /></font></Text>
                  <TextField fx:id="email" promptText="esempio@mail.com"
                             style="-fx-font-size: 18px; -fx-background-radius: 10;" />

                  <Text text="Password"><font><Font size="20.0" /></font></Text>
                  <PasswordField fx:id="password" promptText="Inserisci la password"
                                 style="-fx-font-size: 18px; -fx-background-radius: 10;" />

                  <Text fx:id="textMateria" text="Materie (materia1, materia2, materia3)">
                     <font><Font size="20.0" /></font>
                  </Text>
                  <TextField fx:id="materie" promptText="Es: Matematica, Inglese, Fisica"
                             style="-fx-font-size: 18px; -fx-background-radius: 10;" />

                  <Button text="REGISTRATI" defaultButton="true" onAction="#register"
                          prefHeight="60.0" prefWidth="220.0"
                          style="-fx-background-color: #3498DB;
                                 -fx-text-fill: white;
                                 -fx-font-size: 20px;
                                 -fx-font-weight: bold;
                                 -fx-background-radius: 15;
                                 -fx-cursor: hand;">
                     <VBox.margin><Insets top="10" /></VBox.margin>
                  </Button>

               </children>
            </VBox>
         </content>
      </ScrollPane>

      <!-- Warning -->
      <Rectangle fx:id="warningRectangle" arcHeight="5.0" arcWidth="5.0"
                 fill="WHITE" height="33.0" layoutX="216.0" layoutY="72.0"
                 stroke="TRANSPARENT" strokeWidth="0.0" width="568.0" visible="false" />
      <Label fx:id="warningLabel" layoutX="222.0" layoutY="71.0" text="ERRORE"
             textFill="RED" visible="false">
         <font><Font size="25.0" /></font>
      </Label>

   </children>
</AnchorPane>
